<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.tvz.boggle.boggleapplication.PlayerSetupController"
      spacing="20" alignment="TOP_CENTER" styleClass="main-container" stylesheets="@style.css">

    <!-- Player Setup Section -->
    <Label text="Enter number and names of players" styleClass="player-setup-label"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Number of Players:" styleClass="number-of-players-label"/>
        <TextField fx:id="playerCountField" promptText="Enter number of players" onAction="#onPlayerCountChange" styleClass="input-field"/>
    </HBox>


    <!-- Dynamically generated player name inputs -->
    <VBox fx:id="playerNamesBox" spacing="15" alignment="CENTER"/>

    <!-- Start Game Button -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="startGameButton" text="Start Game" onAction="#startGame" styleClass="action-button" disable="true"/>
    </HBox>
</VBox>

